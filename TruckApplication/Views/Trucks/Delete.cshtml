@model TruckApplication.Models.Entity.TruckEntity

@{
    ViewData["Title"] = "Delete Truck";
}

<h1>Delete Truck</h1>

<h3>Are you sure you want to delete this truck?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Model
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model.Description)
        </dd>
        <dt class = "col-sm-2">
            Year of factory
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(truck => truck.YearOfFactory)
        </dd>
        <dt class = "col-sm-2">
            Year of model
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(truck => truck.YearOfModel)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
